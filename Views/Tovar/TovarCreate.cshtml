@model WebJob.Data.Models.ViewModels.TovarCreateViewModel
@{ Layout = "_LayoutAdminPanel";}
<form asp-action="TovarCreate" asp-controller="Tovar" enctype="multipart/form-data" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="TovarName" class="control-label">Название товара</label>
        <input type="text" asp-for="TovarName" class="form-control" />
    </div>
    <div class="form-group">
        <select asp-for="CategoryId">
            @await Component.InvokeAsync("Tovar", new { selectedCategory = 0 })
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Car" class="control-label">Описание</label>
        <input type="text" asp-for="Car" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label">Цена</label>
        <input type="number" asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Quantity" class="control-label">количество</label>
        <input type="number" asp-for="Quantity" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CatalogId" class="control-label">Каталожный номер</label>
        <input type="number" asp-for="CatalogId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Path" class="control-label">изображение</label>
        <input type="file" asp-for="Path" name="Path" class="form-control" />
    </div>

    <div class="form-group">

        <label asp-for="Visible"><input type="checkbox" asp-for="Visible" value="" />Скрыть</label>


    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-outline-secondary" />
    </div>
</form>